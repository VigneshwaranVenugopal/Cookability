<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:columnCount="5"
        android:rowCount="4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="Recipe: "
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="recipe name"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="Chef: "
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/chef_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="chef name"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="Date"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/appointmentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="2.5"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text=""
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/appointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="2.5"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text=""
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/datePickerButton"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:background="@drawable/primary_color_btn"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Date"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/timePickerButton"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:background="@drawable/primary_color_btn"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Time"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text="Note: "
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/noteEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:fontFamily="@font/nunito_semibold"
            android:text=""
            android:textColor="@android:color/black" />
    </GridLayout>

    <Button
        android:id="@+id/addAppointment_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="172dp"
        android:background="@drawable/primary_color_btn"
        android:text="Request Appointment"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ProgressBar
        android:id="@+id/messageProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>