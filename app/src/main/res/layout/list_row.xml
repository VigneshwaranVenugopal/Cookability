<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dip" >

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout
        android:id="@+id/thumbnail"
        android:onClick="openRecipePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">

        <ImageView
            android:id="@+id/recipe_list_thumbnail"
            android:layout_width="397dp"
            android:layout_height="@dimen/fui_auth_method_button_width"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <!-- Title Of Song-->
    <TextView
        android:id="@+id/recipe_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/thumbnail"
        android:fontFamily="@font/nunito_semibold"
        android:text="Rihanna Love the way lie"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Artist Name -->
        <TextView
            android:id="@+id/recipe_list_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_list_title"
            android:layout_marginTop="1dip"
            android:fontFamily="@font/nunito_semibold"
            android:text="Just gona stand there and ..."
            android:textAlignment="center"
            android:textColor="@color/ic_launcher_background"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:fontFamily="@font/nunito_semibold"
                android:text="Cooking Duration:   "
                android:textAlignment="textEnd"
                android:textColor="@color/ic_launcher_background" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="136dp"
                android:layout_toStartOf="@+id/recipe_id"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="right"
                android:text="5:45"
                android:textColor="@color/ic_launcher_background"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>
    <!-- Rightend Duration -->


    <TextView
        android:id="@+id/recipe_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:text="recipe_id" />
    </LinearLayout>

</LinearLayout>
