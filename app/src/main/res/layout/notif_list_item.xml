<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notif_list_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:src="@drawable/ic_launcher_app" />

    <TextView
        android:id="@+id/notif_list_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/notif_list_image"
        android:fontFamily="@font/nunito_semibold"
        android:text="NotificationMessage"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/show_notif_btn"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/notif_list_message"
        android:layout_marginEnd="20dp"
        android:background="@drawable/primary_color_btn"
        android:fontFamily="@font/nunito_semibold"
        android:text="Read"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</RelativeLayout>